<body>
<header>
</header>
  <main>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2> 
          <%= form_with model: @book do |f| %>
            <p>画像</p>
            <% f.file_field :image, accept: "image/*" %>
          <% end %>
          <table class="table">
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><strong>name:</strong>
                    <%= @book.name %>
                  </td>
                </tr>
                <tr>
                  <td><strong>introduction:</strong>
                    <%=link_to book.introduction, book_path(book) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book do |f|%>
            <div class ="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title%>
            </div>
            <div class="form-group">
            <label for="book_body">Opinion</label>
            <%= f.text_area :body %>
            </div>
            <div class="form-group">
             <%= f.submit 'Create Book' %>
            </div>
          <% end %>

    </div>
  </main>
</body>