<main>
  <div class="container">
    <div class="row">
        <div class="col-md-3">
          <%= render 'users/sideber', user: @book.user %>
        </div>  
            <div class = "offset-md-1">
            </div>
          <div class = "col-md-8">

              <h2>Book detail</h2>
              <table class="table">
                <tbody>
                    <tr>
                        <td>
                          <%= link_to book_path(@book.id) do %>
                            <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
                            <%= @book.user.name %>
                          <% end %>
                        </td>
                        <td>
                            <%= link_to book_path(@book.id) do %>
                              <%= @book.title %>
                            <% end %>
                        </td>
                        <td>
                          <%= @book.body %>
                        </td>
                        <td>
                        <a class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book.id) %>
                        </a></td>
                        <td>
                        <% if @book.user == current_user %>
                          <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                        <% end %>
                        </td>
                    </tr>
                </tbody>
              </table>
          </div>  
    </div>                
  </div>
</main>
