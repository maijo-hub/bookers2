  <div class = "offset-md-1">
  </div>
  <div class = "col-md-8">

    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <tbody>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        <% books.each do |book| %>
          
          <tr>
              <td>
                <%= link_to book_path(book.id) do %>
                  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
                <% end %>
              </td>
              <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
