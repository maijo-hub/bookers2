<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/sideber', user: current_user %>
      </div>
      <div class = "offset-md-1">
      </div>
    <div class="col-md-8 ">
      <h2>Users</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>image</th>
            <th>name</th>
            <th><th>
          </tr>
          <% @users.each do |user| %>

            <tr>
              <td>
                <%= image_tag user.get_profile_image(100,100) %>
              </td>
              <td>       
                <%= user.name %>
              </td>
              <td>
                <%= link_to user_path(user.id) do %>
                  Show
                <% end %>
              </td>
            </tr>
          <% end %>

        </tbody>
      </table>

    
    </div>
  </div>
</main>