<h2>User info</h2> 
<%= image_tag user.get_profile_image(100,100) %>
<%= user.name %>
<p>name</p>
<%= user.introduction %>
<p>introduction</p>
<% if user == current_user %>
  <p><%= link_to "<i class='fa-solid fa-user-gear'></i>".html_safe, edit_user_path(user) , class: "btn btn-outline-secondary btn-block "%></p>
<% end %>

<h2 class="mt-3">New book</h2>
<%= form_with model: Book.new do |f| %>
  <div class ="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title%>
  </div>
  <div class="form-group">
  <label for="book_body">Opinion</label>
  <%= f.text_area :body %>
  </div>
  <div class="form-group">
   <%= f.submit 'Create Book' %>
  </div>
<% end %>